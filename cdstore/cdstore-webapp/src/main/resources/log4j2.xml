<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>
		<RollingFile name="RollingFile"
			fileName="${sys:catalina.home}/logs/cdstore-webapp/cdstore-webapp.log"
			filePattern="${sys:catalina.home}/logs/cdstore-webapp/cdstore-webapp-log-%d{MM-dd-yyyy-HH-mm}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %-5p [%t] %C{2} (%F:%L) - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="0.2 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j.xml" level="info" />
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="RollingFile" />
		</Root>
	</Loggers>
</Configuration>


